@model IEnumerable<PersonalSite.Models.Snippet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Snippets</h2>

<button onclick="location.href='@Url.Action("Create", "Snippet")'; return false;">Create a snippet</button>

@foreach (var snippet in Model)
{
    <div class="snippetLink">
        @Html.ActionLink(snippet.Title, "ViewSnippet", new { id = snippet.ID })
    </div>
}
