    <body>

        <div class="codeDescription">
            @Model.Description
        </div>

        <pre class="prettyprint linenums">

            @ViewBag.CodeText

        </pre>

        <div class="navButtons">

            <button onclick="location.href='@Url.Action("Index", "Snippet")'; return false;">Back to Snippets</button>

            <button onclick="location.href='@Url.Action("Edit", "Snippet", new { id = Model.ID })'; return false;">Edit</button>

            <button onclick="location.href='@Url.Action("Delete", "Snippet", new { id = Model.ID })'; return false;">Delete</button>

        </div>

        @Scripts.Render("~/bundles/jquery")
        <script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js"></script>
